{
  "manifest_version": 3,
  "name": "GDG西安文章总结助手",
  "version": "1.0.0",
  "description": "一键总结网页文章内容，提高阅读效率",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}